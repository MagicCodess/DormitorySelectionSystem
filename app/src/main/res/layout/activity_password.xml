<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg">

    <android.support.v7.widget.CardView
        android:layout_width="300dp"
        android:layout_height="350dp"
        app:cardCornerRadius="6dp"
        app:cardElevation="3dp"
        app:cardUseCompatPadding="true"
        android:layout_centerInParent="true"
        android:id="@+id/cv">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            >
            <RelativeLayout
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="45dp">
                <View
                    android:layout_alignParentStart="true"
                    android:layout_width="8dp"
                    android:layout_height="match_parent"
                    android:background="#2fa881"
                    />
                <TextView
                    android:layout_centerVertical="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="50dp"
                    android:text="软微在线选宿舍"
                    android:textColor="#FFCC00"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    />
            </RelativeLayout>

            <RelativeLayout
                android:layout_marginTop="25dp"
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/xuehaozhaohui1"
                    android:layout_width="110dp"
                    android:layout_height="31dp"
                    android:background="#FFD700"
                    android:textColor="#2fa881"
                    android:text="学号"
                    android:textSize="11sp"
                    android:textStyle="bold"
                    android:textAlignment="center"
                    android:gravity="center_vertical"
                    />
                <EditText
                    android:id="@+id/xuehaozhaohui"
                    android:layout_width="110dp"
                    android:layout_height="31dp"
                    android:textColor="#FFD700"
                    android:layout_below="@+id/xuehaozhaohui1"
                    android:hint="请输入学号"
                    android:textSize="9sp"
                    android:textStyle="bold"
                    android:layout_marginTop="10dp"
                    android:textAlignment="center"/>
                <Button
                    android:id="@+id/mimazhaohui1"
                    android:layout_width="110dp"
                    android:layout_height="31dp"
                    android:background="#FFD700"
                    android:textColor="#2fa881"
                    android:layout_below="@+id/xuehaozhaohui"
                    android:stateListAnimator="@drawable/state_list_animator_z"
                    android:layout_marginTop="10dp"
                    android:text="点击找回密码"
                    android:textSize="11sp"
                    android:textStyle="bold"
                    android:textAlignment="center"
                    android:gravity="center_vertical"
                    />
                <EditText
                    android:id="@+id/mimazhaohui"
                    android:layout_width="110dp"
                    android:layout_height="31dp"
                    android:textColor="#FFD700"
                    android:layout_below="@+id/mimazhaohui1"
                    android:hint="这里会显示密码"
                    android:textSize="9sp"
                    android:textStyle="bold"
                    android:layout_marginTop="10dp"
                    android:textAlignment="center"
                    android:editable="false"/>
                <Button
                    android:id="@+id/bt_fanhui6"
                    android:layout_width="110dp"
                    android:layout_height="31dp"
                    android:layout_below="@+id/mimazhaohui"
                    android:layout_marginTop="10dp"
                    android:background="#FFD700"
                    android:stateListAnimator="@drawable/state_list_animator_z"
                    android:text="返回"
                    android:textColor="#2fa881"></Button>

            </RelativeLayout>
        </LinearLayout>
    </android.support.v7.widget.CardView>
</RelativeLayout>