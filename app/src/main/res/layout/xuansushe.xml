<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg">

    <android.support.v7.widget.CardView
        android:layout_width="300dp"
        android:layout_height="500dp"
        app:cardCornerRadius="6dp"
        app:cardElevation="3dp"
        app:cardUseCompatPadding="true"
        android:layout_centerInParent="true"
        android:id="@+id/cv">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            >
            <RelativeLayout
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="31dp">
                <View
                    android:layout_alignParentStart="true"
                    android:layout_width="8dp"
                    android:layout_height="match_parent"
                    android:background="#2fa881"
                    />
                <TextView
                    android:layout_centerVertical="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="45dp"
                    android:text="软微在线选宿舍"
                    android:textColor="#FFCC00"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    />
            </RelativeLayout>

            <LinearLayout
                android:layout_marginTop="25dp"
                android:gravity="center_vertical"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="10dp">

                <RelativeLayout
                    android:layout_width="270dp"
                    android:layout_height="31dp">
                    <TextView
                        android:id="@+id/num1"
                        android:layout_width="110dp"
                        android:layout_height="31dp"
                        android:background="#FFD700"
                        android:textColor="#2fa881"
                        android:text="总办理人数"
                        android:textSize="11sp"
                        android:textStyle="bold"
                        android:textAlignment="center"
                        android:gravity="center_vertical"
                        />

                    <Spinner
                        android:id="@+id/num"
                        android:layout_width="220dp"
                        android:layout_height="31dp"
                        android:layout_toRightOf="@+id/num1"
                        android:layout_marginLeft="38dp"
                        android:gravity="center_vertical"
                        android:text="nodata"
                        android:textAlignment="center"
                        android:textColor="#FFD700"
                        android:textSize="11sp"
                        android:textStyle="bold" >

                    </Spinner>
                </RelativeLayout>
                <RelativeLayout
                    android:layout_width="270dp"
                    android:layout_height="31dp"

                    >
                    <TextView
                        android:id="@+id/stuid1"
                        android:layout_width="110dp"
                        android:layout_height="31dp"
                        android:background="#FFD700"
                        android:textColor="#2fa881"
                        android:text="办理人"
                        android:textSize="11sp"
                        android:textStyle="bold"
                        android:textAlignment="center"
                        android:gravity="center_vertical"
                        />

                    <TextView
                        android:id="@+id/stuid"
                        android:layout_width="180dp"
                        android:layout_height="31dp"
                        android:layout_toRightOf="@+id/stuid1"
                        android:gravity="center_vertical"
                        android:text="nodata"
                        android:textAlignment="center"
                        android:textColor="#FFD700"
                        android:textSize="9sp"
                        android:textStyle="bold" />
                </RelativeLayout>
                <RelativeLayout
                    android:layout_width="270dp"
                    android:layout_height="31dp">
                    <TextView
                        android:id="@+id/stu1id1"
                        android:layout_width="110dp"
                        android:layout_height="31dp"
                        android:background="#FFD700"
                        android:textColor="#2fa881"
                        android:text="同住人1学号"
                        android:textSize="11sp"
                        android:textStyle="bold"
                        android:textAlignment="center"
                        android:gravity="center_vertical"
                        />

                    <EditText
                        android:id="@+id/stu1id"
                        android:layout_width="180dp"
                        android:layout_height="31dp"
                        android:layout_toRightOf="@+id/stu1id1"
                        android:gravity="center_vertical"
                        android:text="nodata"
                        android:textAlignment="center"
                        android:textColor="#FFD700"
                        android:textSize="9sp"
                        android:textStyle="bold" />
                </RelativeLayout>
                <RelativeLayout
                    android:layout_width="270dp"
                    android:layout_height="31dp">
                    <TextView
                        android:id="@+id/v1code1"
                        android:layout_width="110dp"
                        android:layout_height="31dp"
                        android:background="#FFD700"
                        android:textColor="#2fa881"
                        android:text="同住人校验码"
                        android:textSize="11sp"
                        android:textStyle="bold"
                        android:textAlignment="center"
                        android:gravity="center_vertical"
                        />
                    <EditText
                        android:id="@+id/v1code"
                        android:layout_width="180dp"
                        android:layout_height="31dp"
                        android:textColor="#FFD700"
                        android:layout_toRightOf="@+id/v1code1"
                        android:text="nodata"
                        android:textSize="9sp"
                        android:textStyle="bold"
                        android:textAlignment="center"
                        android:gravity="center_vertical"/>
                </RelativeLayout>
                <RelativeLayout
                    android:layout_width="270dp"
                    android:layout_height="31dp">
                    <TextView
                        android:id="@+id/stu2id1"
                        android:layout_width="110dp"
                        android:layout_height="31dp"
                        android:background="#FFD700"
                        android:textColor="#2fa881"
                        android:text="同住人2学号"
                        android:textSize="11sp"
                        android:textStyle="bold"
                        android:textAlignment="center"
                        android:gravity="center_vertical"
                        />
                    <EditText
                        android:id="@+id/stu2id"
                        android:layout_width="180dp"
                        android:layout_height="31dp"
                        android:textColor="#FFD700"
                        android:layout_toRightOf="@+id/stu2id1"
                        android:text="nodata"
                        android:textSize="9sp"
                        android:textStyle="bold"
                        android:textAlignment="center"
                        android:gravity="center_vertical"/>
                </RelativeLayout>
                <RelativeLayout
                    android:layout_width="270dp"
                    android:layout_height="31dp">
                    <TextView
                        android:id="@+id/v2code1"
                        android:layout_width="110dp"
                        android:layout_height="31dp"
                        android:background="#FFD700"
                        android:textColor="#2fa881"
                        android:text="同住人2校验码"
                        android:textSize="11sp"
                        android:textStyle="bold"
                        android:textAlignment="center"
                        android:gravity="center_vertical"
                        />
                    <EditText
                        android:id="@+id/v2code"
                        android:layout_width="180dp"
                        android:layout_height="31dp"
                        android:textColor="#FFD700"
                        android:layout_toRightOf="@+id/v2code1"
                        android:text="nodata"
                        android:textSize="9sp"
                        android:textStyle="bold"
                        android:textAlignment="center"
                        android:gravity="center_vertical"/>
                </RelativeLayout>
                <RelativeLayout
                    android:layout_width="270dp"
                    android:layout_height="31dp">
                    <TextView
                        android:id="@+id/stu3id1"
                        android:layout_width="110dp"
                        android:layout_height="31dp"
                        android:background="#FFD700"
                        android:textColor="#2fa881"
                        android:text="同住人3学号"
                        android:textSize="11sp"
                        android:textStyle="bold"
                        android:textAlignment="center"
                        android:gravity="center_vertical"
                        />
                    <EditText
                        android:id="@+id/stu3id"
                        android:layout_width="180dp"
                        android:layout_height="31dp"
                        android:textColor="#FFD700"
                        android:layout_toRightOf="@+id/stu3id1"
                        android:text="nodata"
                        android:textSize="9sp"
                        android:textStyle="bold"
                        android:textAlignment="center"
                        android:gravity="center_vertical"/>
                </RelativeLayout>
                <RelativeLayout
                    android:layout_width="270dp"
                    android:layout_height="31dp">
                    <TextView
                        android:id="@+id/v3code1"
                        android:layout_width="110dp"
                        android:layout_height="31dp"
                        android:background="#FFD700"
                        android:textColor="#2fa881"
                        android:text="同住人3校验码"
                        android:textSize="11sp"
                        android:textStyle="bold"
                        android:textAlignment="center"
                        android:gravity="center_vertical"
                        />
                    <EditText
                        android:id="@+id/v3code"
                        android:layout_width="180dp"
                        android:layout_height="31dp"
                        android:textColor="#FFD700"
                        android:layout_toRightOf="@+id/v3code1"
                        android:text="nodata"
                        android:textSize="9sp"
                        android:textStyle="bold"
                        android:textAlignment="center"
                        android:gravity="center_vertical"/>
                </RelativeLayout>
                <RelativeLayout
                    android:layout_width="270dp"
                    android:layout_height="31dp">
                    <TextView
                        android:id="@+id/buildingNo1"
                        android:layout_width="110dp"
                        android:layout_height="31dp"
                        android:background="#FFD700"
                        android:textColor="#2fa881"
                        android:text="楼号"
                        android:textSize="11sp"
                        android:textStyle="bold"
                        android:textAlignment="center"
                        android:gravity="center_vertical"
                        />
                    <Spinner
                        android:id="@+id/buildingNo"
                        android:layout_width="220dp"
                        android:layout_height="31dp"
                        android:layout_toRightOf="@+id/buildingNo1"
                        android:layout_marginLeft="38dp"
                        android:gravity="center_vertical"
                        android:text="nodata"
                        android:textAlignment="center"
                        android:textColor="#FFD700"
                        android:textSize="11sp"
                        android:textStyle="bold" >

                    </Spinner>

                </RelativeLayout>
                <TextView
                    android:layout_width="30dp"
                    android:layout_height="25dp" />
                <Button
                    android:id="@+id/bt_xuanze"
                    android:background="#FFD700"
                    android:stateListAnimator="@drawable/state_list_animator_z"
                    android:layout_width="150dp"
                    android:layout_height="30dp"
                    android:text="选宿舍!"
                    android:layout_gravity="center"
                    android:textColor="#2fa881"
                    >
                </Button>
                <Button
                    android:id="@+id/bt_fanhui3"
                    android:background="#FFD700"
                    android:stateListAnimator="@drawable/state_list_animator_z"
                    android:layout_width="150dp"
                    android:layout_height="30dp"
                    android:layout_marginTop="10dp"
                    android:text="返回"
                    android:layout_gravity="center"
                    android:textColor="#2fa881"
                    >
                </Button>
                <TextView
                    android:id="@+id/tvv1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:visibility="invisible"/>
                <TextView
                    android:id="@+id/tvv2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:visibility="invisible"/>
                <TextView
                    android:id="@+id/tvv3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:visibility="invisible"/>
            </LinearLayout>
        </LinearLayout>
    </android.support.v7.widget.CardView>
</RelativeLayout>